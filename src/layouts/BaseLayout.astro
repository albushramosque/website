---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Al-Bushra Mosque - A place of worship, learning, and community' } = Astro.props;
---

<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0c4a6e" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <title>{title} | Al-Bushra Mosque</title>
  </head>
  <body class="min-h-screen bg-cream-50 text-stone-800 font-sans antialiased">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-mosque-800 focus:text-white focus:rounded-md focus:outline-none focus:ring-2 focus:ring-mosque-800"
    >
      Skip to main content
    </a>

    <header class="sticky top-0 z-40 bg-white/95 backdrop-blur-sm border-b border-stone-100">
      <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Main navigation">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="flex items-center gap-2 text-mosque-800 hover:text-mosque-900 transition-colors">
            <span class="text-2xl font-serif font-semibold tracking-tight">Al-Bushra Mosque</span>
          </a>

          <ul class="hidden md:flex items-center gap-8 text-sm font-medium">
            <li><a href="/" class="text-stone-600 hover:text-mosque-800 transition-colors" aria-current={Astro.url.pathname === '/' ? 'page' : undefined}>Home</a></li>
            <li><a href="/events" class="text-stone-600 hover:text-mosque-800 transition-colors" aria-current={Astro.url.pathname.startsWith('/events') ? 'page' : undefined}>Events</a></li>
            <li><a href="/donate" class="text-stone-600 hover:text-mosque-800 transition-colors" aria-current={Astro.url.pathname.startsWith('/donate') ? 'page' : undefined}>Donate</a></li>
          </ul>

          <!-- Mobile menu button - links visible on small screens -->
          <div class="md:hidden flex items-center gap-4 text-sm font-medium">
            <a href="/events" class="text-stone-600 hover:text-mosque-800 transition-colors">Events</a>
            <a href="/donate" class="text-mosque-800 font-semibold">Donate</a>
          </div>
        </div>
      </nav>
    </header>

    <main id="main-content" class="flex-1">
      <slot />
    </main>

    <footer class="bg-mosque-800 text-stone-300 mt-auto border-t-4 border-gold-500">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          <div>
            <h2 class="text-white font-serif font-semibold text-xl mb-4">Al-Bushra Mosque</h2>
            <p class="text-sm leading-relaxed text-stone-200">
              A welcoming place for worship, learning, and community gathering.
            </p>
          </div>

          <div>
            <h2 class="text-white font-serif font-semibold text-xl mb-4">Quick Links</h2>
            <ul class="space-y-2 text-sm">
              <li><a href="/events" class="hover:text-gold-400 transition-colors">Events</a></li>
              <li><a href="/donate" class="hover:text-gold-400 transition-colors">Donate</a></li>
            </ul>
          </div>

          <div>
            <h2 class="text-white font-serif font-semibold text-xl mb-4">Donate</h2>
            <div class="space-y-3 text-sm">
              <div>
                <p class="text-gold-400 text-xs uppercase tracking-wide mb-1">Zelle</p>
                <p class="text-white">donation@albushramosque.org</p>
              </div>
              <div>
                <p class="text-gold-400 text-xs uppercase tracking-wide mb-1">PayPal</p>
                <a href="https://paypal.me/albushramosque" class="text-white hover:text-gold-400 transition-colors" target="_blank" rel="noopener noreferrer">
                  paypal.me/albushramosque
                </a>
              </div>
            </div>
          </div>

          <div>
            <h2 class="text-white font-serif font-semibold text-xl mb-4">Location</h2>
            <address class="not-italic text-sm space-y-1 text-stone-200">
              <p>4 Pearl St</p>
              <p>Dedham, Massachusetts</p>
            </address>
            <div class="mt-3 text-xs text-stone-400 space-y-0.5">
              <p>Jummah: 1st floor (Stil Studio)</p>
              <p>Daily prayers: 2nd floor musalla</p>
              <p>Building open 8amâ€“8pm</p>
            </div>
          </div>
        </div>

        <div class="border-t border-mosque-900 mt-8 pt-8 text-center text-sm text-stone-400">
          <p>&copy; {new Date().getFullYear()} Al-Bushra Mosque. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
