---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Donate" description="Support Al-Bushra Mosque with your generous donations">
  <!-- Hero Section -->
  <section class="py-16 sm:py-20 bg-cream-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-bold font-serif text-mosque-800 mb-6">
        Support Our Mosque
      </h1>
      <p class="text-lg text-stone-600 max-w-2xl mx-auto">
        Your generous donations help us maintain our sanctuary and serve the local community. Every contribution makes a difference.
      </p>
    </div>
  </section>

  <!-- Donation Options -->
  <section class="py-16 sm:py-20 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Thank You Message -->
      <div class="text-center mb-12">
        <div class="w-20 h-20 bg-mosque-800/10 text-mosque-800 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </div>
        <p class="text-xl font-serif text-mosque-800">
          JazakAllah Khair for your support
        </p>
      </div>

      <!-- Donation Methods -->
      <div class="space-y-6">
        <!-- Zelle -->
        <div class="bg-cream-50 rounded-2xl border border-cream-200 p-6 sm:p-8">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 bg-mosque-800 text-white rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h2 class="text-xl font-bold font-serif text-mosque-800">Zelle</h2>
              <p class="text-stone-600 text-sm">Send directly from your bank app</p>
            </div>
          </div>
          <div class="bg-white px-5 py-4 rounded-xl border border-cream-200">
            <p class="text-sm text-stone-500 mb-1">Send to:</p>
            <p class="font-mono text-lg text-mosque-800 font-medium">
              donation@albushramosque.org
            </p>
          </div>
        </div>

        <!-- PayPal -->
        <div class="bg-cream-50 rounded-2xl border border-cream-200 p-6 sm:p-8">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 bg-mosque-800 text-white rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M7.076 21.337H2.47a.641.641 0 0 1-.633-.74L4.944.901C5.026.382 5.474 0 5.998 0h7.46c2.57 0 4.578.543 5.69 1.81 1.01 1.15 1.304 2.42 1.012 4.287-.023.143-.047.288-.077.437-.983 5.05-4.349 6.797-8.647 6.797h-2.19c-.524 0-.968.382-1.05.9l-1.12 7.106zm14.146-14.42a3.35 3.35 0 0 0-.607-.541c-.013.076-.026.175-.041.254-.93 4.778-4.005 7.201-9.138 7.201h-2.19a.563.563 0 0 0-.556.479l-1.187 7.527h-.506l-.24 1.516a.56.56 0 0 0 .554.647h3.882c.46 0 .85-.334.922-.788.06-.26.76-4.852.816-5.09a.932.932 0 0 1 .923-.788h.58c3.76 0 6.705-1.528 7.565-5.946.36-1.847.174-3.388-.777-4.471z"/>
              </svg>
            </div>
            <div>
              <h2 class="text-xl font-bold font-serif text-mosque-800">PayPal</h2>
              <p class="text-stone-600 text-sm">Quick and secure online payment</p>
            </div>
          </div>
          <a 
            href="https://paypal.me/albushramosque" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-full px-6 py-4 bg-mosque-800 text-white font-semibold rounded-xl hover:bg-mosque-900 transition-all duration-200 shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-mosque-800 focus:ring-offset-2"
          >
            Donate via PayPal
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Tax Receipt -->
      <div class="mt-12 text-center">
        <div class="inline-block bg-gold-400/10 border border-gold-400/30 rounded-2xl p-6 sm:p-8">
          <h2 class="text-xl font-bold font-serif text-mosque-800 mb-3">Need a Tax Receipt?</h2>
          <p class="text-stone-600 mb-6 max-w-md">
            Fill out this form after donating and we'll send you a receipt for your records.
          </p>
          <a 
            href="https://docs.google.com/forms/d/e/1FAIpQLSceldLgOZoqeWoBWGAITh74OmPw1_rcNsHBWX6QRWdQhui4oQ/viewform" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-8 py-3 border-2 border-mosque-800 text-mosque-800 font-semibold rounded-xl hover:bg-mosque-800 hover:text-white transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-mosque-800 focus:ring-offset-2"
          >
            Request Tax Receipt
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
