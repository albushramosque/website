---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

const allEvents = await getCollection('events');

const now = new Date();
now.setHours(0, 0, 0, 0);

const upcomingEvents = allEvents
  .filter((event: CollectionEntry<'events'>) => new Date(event.data.date) >= now)
  .sort((a: CollectionEntry<'events'>, b: CollectionEntry<'events'>) => 
    new Date(a.data.date).getTime() - new Date(b.data.date).getTime()
  );

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    weekday: 'short',
    month: 'short',
    day: 'numeric',
  });
}

function getEventTypeColor(type: string): { bg: string; text: string; border: string } {
  const colors: Record<string, { bg: string; text: string; border: string }> = {
    jummah: { bg: 'bg-emerald-100', text: 'text-emerald-800', border: 'border-emerald-200' },
    lecture: { bg: 'bg-blue-100', text: 'text-blue-800', border: 'border-blue-200' },
    class: { bg: 'bg-purple-100', text: 'text-purple-800', border: 'border-purple-200' },
    community: { bg: 'bg-amber-100', text: 'text-amber-800', border: 'border-amber-200' },
    other: { bg: 'bg-stone-100', text: 'text-stone-800', border: 'border-stone-200' },
  };
  return colors[type] || colors.other;
}

function getEventTypeLabel(type: string): string {
  const labels: Record<string, string> = {
    jummah: 'Jummah',
    lecture: 'Lecture',
    class: 'Class',
    community: 'Community',
    other: 'Event',
  };
  return labels[type] || 'Event';
}
---

<BaseLayout title="Events" description="Upcoming events and programs at Al-Bushra Mosque">
  <section class="py-12 sm:py-16 lg:py-20 bg-stone-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-10 sm:mb-12">
        <h1 class="text-3xl sm:text-4xl font-bold text-stone-900 mb-4">
          Upcoming Events
        </h1>
        <p class="text-stone-600 max-w-2xl mx-auto">
          Join us for prayers, classes, lectures, and community gatherings.
        </p>
      </div>

      {upcomingEvents.length === 0 ? (
        <div class="text-center py-12 bg-white rounded-xl border border-stone-200">
          <svg class="w-12 h-12 text-stone-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <p class="text-stone-600">No upcoming events scheduled.</p>
          <p class="text-sm text-stone-500 mt-1">Check back soon for new events.</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {upcomingEvents.map((event: CollectionEntry<'events'>) => (
              <article class="bg-white rounded-xl border border-stone-200 overflow-hidden hover:shadow-md transition-shadow">
                <div class="p-5 sm:p-6">
                  <div class="flex items-start justify-between gap-3 mb-3">
                    <span class={`inline-flex px-2.5 py-1 text-xs font-medium rounded-full ${getEventTypeColor(event.data.type).bg} ${getEventTypeColor(event.data.type).text}`}>
                      {getEventTypeLabel(event.data.type)}
                    </span>
                    {event.data.featured && (
                      <span class="inline-flex items-center text-xs text-amber-600">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        Featured
                      </span>
                    )}
                  </div>

                  <h2 class="text-lg font-semibold text-stone-900 mb-2">
                    {event.data.title}
                  </h2>

                  <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-stone-600 mb-3">
                    <div class="flex items-center gap-1.5">
                      <svg class="w-4 h-4 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <time datetime={new Date(event.data.date).toISOString()}>
                        {formatDate(new Date(event.data.date))}
                      </time>
                    </div>
                    <div class="flex items-center gap-1.5">
                      <svg class="w-4 h-4 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span>{event.data.time}</span>
                    </div>
                  </div>

                  {event.data.speaker && (
                    <div class="flex items-center gap-2 text-sm text-stone-600 mb-3">
                      <svg class="w-4 h-4 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                      <span>{event.data.speaker}</span>
                    </div>
                  )}

                  <p class="text-sm text-stone-600 leading-relaxed line-clamp-2">
                    {event.data.description}
                  </p>
                </div>
              </article>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>
