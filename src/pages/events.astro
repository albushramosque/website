---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

const allEvents = await getCollection('events');

const now = new Date();
now.setHours(0, 0, 0, 0);

const upcomingEvents = allEvents
  .filter((event: CollectionEntry<'events'>) => new Date(event.data.date) >= now)
  .sort((a: CollectionEntry<'events'>, b: CollectionEntry<'events'>) => 
    new Date(a.data.date).getTime() - new Date(b.data.date).getTime()
  );

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    weekday: 'long',
    month: 'long',
    day: 'numeric',
  });
}

function getEventTypeStyles(type: string): { bg: string; text: string; accent: string } {
  const styles: Record<string, { bg: string; text: string; accent: string }> = {
    jummah: { bg: 'bg-mosque-800/10', text: 'text-mosque-800', accent: 'border-l-mosque-800' },
    lecture: { bg: 'bg-gold-400/10', text: 'text-gold-600', accent: 'border-l-gold-500' },
    class: { bg: 'bg-purple-100', text: 'text-purple-800', accent: 'border-l-purple-500' },
    community: { bg: 'bg-amber-100', text: 'text-amber-800', accent: 'border-l-amber-500' },
    other: { bg: 'bg-stone-100', text: 'text-stone-800', accent: 'border-l-stone-400' },
  };
  return styles[type] || styles.other;
}

function getEventTypeLabel(type: string): string {
  const labels: Record<string, string> = {
    jummah: 'Jummah Prayer',
    lecture: 'Lecture',
    class: 'Class',
    community: 'Community',
    other: 'Event',
  };
  return labels[type] || 'Event';
}
---

<BaseLayout title="Events" description="Upcoming events and programs at Al-Bushra Mosque">
  <!-- Hero Section -->
  <section class="py-16 sm:py-20 bg-cream-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-bold font-serif text-mosque-800 mb-6">
        Upcoming Events
      </h1>
      <p class="text-lg text-stone-600 max-w-2xl mx-auto">
        Join us for prayers, gatherings, and community programs. All are welcome.
      </p>
    </div>
  </section>

  <!-- Events List -->
  <section class="py-16 sm:py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      {upcomingEvents.length === 0 ? (
        <div class="text-center py-16 bg-cream-50 rounded-2xl border border-cream-200">
          <div class="w-16 h-16 bg-cream-200 text-stone-400 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <p class="text-xl font-serif text-mosque-800 mb-2">No upcoming events</p>
          <p class="text-stone-600">Check back soon for new events and programs.</p>
        </div>
      ) : (
        <div class="space-y-6">
          {upcomingEvents.map((event: CollectionEntry<'events'>) => (
              <article class={`bg-cream-50 rounded-2xl border border-cream-200 overflow-hidden border-l-4 ${getEventTypeStyles(event.data.type).accent} hover:shadow-lg transition-all duration-300`}>
                <div class="p-6 sm:p-8">
                  <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
                    <div>
                      <span class={`inline-flex px-3 py-1 text-sm font-medium rounded-full ${getEventTypeStyles(event.data.type).bg} ${getEventTypeStyles(event.data.type).text} mb-3`}>
                        {getEventTypeLabel(event.data.type)}
                      </span>
                      <h2 class="text-2xl font-bold font-serif text-mosque-800">
                        {event.data.title}
                      </h2>
                    </div>
                    {event.data.featured && (
                      <span class="inline-flex items-center px-3 py-1 text-sm font-medium text-gold-600 bg-gold-400/10 rounded-full">
                        <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        Featured
                      </span>
                    )}
                  </div>

                  <div class="flex flex-wrap items-center gap-6 text-stone-600 mb-4">
                    <div class="flex items-center gap-2">
                      <svg class="w-5 h-5 text-mosque-800/60" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <time datetime={new Date(event.data.date).toISOString()} class="font-medium">
                        {formatDate(new Date(event.data.date))}
                      </time>
                    </div>
                    <div class="flex items-center gap-2">
                      <svg class="w-5 h-5 text-mosque-800/60" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span class="font-medium">{event.data.time}</span>
                    </div>
                    {event.data.speaker && (
                      <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-mosque-800/60" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        <span>{event.data.speaker}</span>
                      </div>
                    )}
                  </div>

                  <p class="text-stone-600 leading-relaxed">
                    {event.data.description}
                  </p>
                </div>
              </article>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 sm:py-20 bg-mosque-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold font-serif text-white mb-4">
        Stay Connected
      </h2>
      <p class="text-lg text-cream-200 mb-8 max-w-2xl mx-auto">
        Visit us for daily prayers or join our community gatherings.
      </p>
      <a
        href="/#visitor-info"
        class="inline-flex items-center justify-center px-10 py-4 text-lg font-semibold text-mosque-800 bg-gold-400 rounded-xl hover:bg-gold-500 transition-all duration-200 shadow-lg hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-gold-400 focus:ring-offset-2 focus:ring-offset-mosque-800"
      >
        Visitor Information
      </a>
    </div>
  </section>
</BaseLayout>
