---
import { getCollection, type CollectionEntry } from 'astro:content';

const allEvents = await getCollection('events');

const now = new Date();
now.setHours(0, 0, 0, 0);

const thisWeekEnd = new Date(now);
thisWeekEnd.setDate(thisWeekEnd.getDate() + (7 - thisWeekEnd.getDay()));

const nextJummah = allEvents
  .filter((event: CollectionEntry<'events'>) => event.data.type === 'jummah')
  .filter((event: CollectionEntry<'events'>) => {
    const eventDate = new Date(event.data.date);
    return eventDate >= now && eventDate <= thisWeekEnd;
  })
  .sort((a: CollectionEntry<'events'>, b: CollectionEntry<'events'>) => 
    new Date(a.data.date).getTime() - new Date(b.data.date).getTime()
  )[0];

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    weekday: 'long',
    month: 'long',
    day: 'numeric',
  });
}
---

<article class="bg-gradient-to-br from-emerald-50 to-emerald-100 rounded-xl border border-emerald-200 overflow-hidden">
  <div class="bg-emerald-800 px-4 sm:px-6 py-3">
    <div class="flex items-center gap-2">
      <svg class="w-5 h-5 text-emerald-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <h2 class="text-lg font-semibold text-white">This Week's Jummah</h2>
    </div>
  </div>

  <div class="p-4 sm:p-6">
    {nextJummah ? (
      <div class="space-y-4">
        <div>
          <p class="text-sm text-emerald-700 font-medium">
            {formatDate(new Date(nextJummah.data.date))}
          </p>
          <p class="text-2xl font-bold text-emerald-900 mt-1">
            {nextJummah.data.time}
          </p>
        </div>

        {nextJummah.data.speaker && (
          <div class="flex items-center gap-3 p-3 bg-white/60 rounded-lg">
            <div class="w-10 h-10 bg-emerald-200 rounded-full flex items-center justify-center" aria-hidden="true">
              <svg class="w-5 h-5 text-emerald-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <div>
              <p class="text-xs text-emerald-600 uppercase tracking-wide font-medium">Khateeb</p>
              <p class="text-emerald-900 font-semibold">{nextJummah.data.speaker}</p>
            </div>
          </div>
        )}

        <p class="text-sm text-emerald-800 leading-relaxed">
          {nextJummah.data.description}
        </p>

        <a
          href={`/events`}
          class="inline-flex items-center text-sm font-medium text-emerald-700 hover:text-emerald-900 transition-colors"
        >
          View all events
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    ) : (
      <div class="text-center py-4">
        <p class="text-emerald-700">No Jummah scheduled for this week.</p>
        <a
          href="/events"
          class="inline-flex items-center mt-2 text-sm font-medium text-emerald-600 hover:text-emerald-800 transition-colors"
        >
          View upcoming events
        </a>
      </div>
    )}
  </div>
</article>
